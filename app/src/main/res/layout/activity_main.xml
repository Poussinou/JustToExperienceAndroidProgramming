<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnMain_ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir ListView" />

            <Button
                android:id="@+id/btnMain_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir TextView" />

            <Button
                android:id="@+id/btnMain_SharedPreferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir SharedPreferences" />

            <Button
                android:id="@+id/btnMain_ScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir ScrollView" />

            <Button
                android:id="@+id/btnMain_ImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voir ImageView" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>